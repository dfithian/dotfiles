{
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/dist": true,
    "**/dist-newstyle": true,
    "**/result": true,
    "**/Thumbs.db": true,
    ".direnv/": true,
    "target/": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "host/conductor/drivers.log": true,
    "host/mock-deployment/sockets/*.sock": true
  },
  "comments.openView": "never",
  "haskell.manageHLS": "PATH",
  "rewrap.wrappingColumn": 100,
  "update.mode": "none",
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "<C-p>"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    {
      "before": [
        "<C-w>"
      ],
      "commands": [
        "workbench.action.closeActiveEditor"
      ]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": [
        "<C-p>"
      ],
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    {
      "before": [
        "<C-w>"
      ],
      "commands": [
        "workbench.action.closeActiveEditor"
      ]
    }
  ],
  "window.autoDetectColorScheme": true,
  "workbench.editor.enablePreview": false,
  "workbench.preferredDarkColorScheme": "Default Dark Modern",
  "workbench.preferredLightColorScheme": "Default Light Modern",
  "haskell.formattingProvider": "fourmolu",
  "git.openRepositoryInParentFolders": "always",
  "security.workspace.trust.untrustedFiles": "open",
  "diffEditor.ignoreTrimWhitespace": false
}
